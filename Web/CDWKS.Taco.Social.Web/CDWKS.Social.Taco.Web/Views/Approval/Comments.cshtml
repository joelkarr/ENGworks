@{
    Layout = null;
}
@model CDWKS.Social.Taco.Models.ApprovalViewModel
<html>
<head>
    <title></title>
    <style type="text/css">
        *
        {
            margin: 0;
            padding: 0;
        }
        
        body
        {
            width: 450px;
            font-family: Arial;
            padding: 10px;
        }
               
        dl 
        {
            width: 450px;
        }
        
        dt
        {
            color: #3b5998;
            font-size: 14px;
            margin-top: 10px;
            margin-bottom: 10px;
            position: relative;
        }
        
        dt img
        {
            border: 0;
            width: 18px;
            height: 17px;
            position: absolute;
            top: 10px;
            right: 0px;
        }
        
         dt p
        {
            border: 0;
            width: 422px;
        }
        
        dd
        {
            color: #000000;
            font-size: 13px;
            border-bottom: solid 1px #b3bbce;
            padding-bottom: 10px;
            width: 450px;
        }
        
        dd p
        {
            width: 422px;
        }
        
    </style>
</head>
<body>
    <dl>
        @foreach (var row in Model.SocialFeedbackFormList)
        {
            <dt>
                <p>
                    @row.Product - @row.Family
                    <br />
                    @row.Username - @row.Company
                </p>
                @if (row.Like)
                {
                    <img src="/Common/Images/thumbsup.png" alt="Like" />
                }
                else
                {
                    <img src="/Common/Images/thumbsdown.png" alt="Dislike" />
                }
            </dt>
            <dd>
                <p>
                    @row.Comments
                </p>
            </dd>
        }
    </dl>
</body>
</html>
