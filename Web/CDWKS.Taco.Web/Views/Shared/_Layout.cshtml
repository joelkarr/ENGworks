@model CDWKS.BXC.Taco.Web.Models.BaseViewModel
<!DOCTYPE html>
<html>
<head>

    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/contentstyle.css")" rel="stylesheet" type="text/css" />
   
</head>

<body id="body_area" >
    <div id="TopBox">
        <img id="imgBIMXchangeLogo" src="@Url.Content("~/Content/images/BIMXchange-logo.png")" alt="BIMXchange"/>
    </div>
    <div id="LowerBox">
        <span style="float: left;">
            <img id="imgENGworksLogo" src="@Url.Content("~/Content/Images/ByENGworksLogo.png")" alt="byENGworks" /></span>
        <span style="float: right;">
            @if(ViewBag.Title == "Results")
            {
                @Html.ActionImage("Index", null, String.Empty, @Url.Content("~/Content/images/primary-criteria.png"), "Index", "headerbutton")
            }
            @if (ViewBag.Title == "Content")
            {
                 @Html.ActionImage("Results", null, Model.QueryString, @Url.Content("~/Content/images/searchresults.png"), "Results", "headerbutton")
            }
            <img id="btnHelp" class="headerbutton" src="@Url.Content("~/Content/Images/Help.png")" alt="help"/>
        </span>
    </div>
    <div id="TacoBox">
        <span style="float: left;"><img id="imgTacoLogo" src="@Url.Content("~/Content/images/Taco Revit Pump Finder Logo.png")" alt="BIMXchange"/></span>      
        <span style="float: right; padding-right:100px;">
            @if(ViewBag.Title == "Results")
            {
                    <h2>Search Results</h2>
                    <p>Click on preview image to select a pump.</p>
            }
        </span>
    </div>
    <div class="whitebackground">
        @RenderBody()
    </div>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.simplemodal.1.4.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/site.js")" type="text/javascript"></script>
    @RenderSection("Scripts")
    
    <div class="footerbox green1"></div>
    <div class="footerbox green2"></div>
    <div class="footerbox green3"></div>
    <div id="footer">
    <span style="width: inherit;">
        <span style="float: left; font-size: small; color:White;">©@(DateTime.Now.Year) ENGworks. All Rights Reserved.</span>
        <span style="float: right; font-size: small; color:White;"><span id="eula">EULA</span> | <span id="help">Help</span></span>
    </span>
</div>
</body>

</html>
